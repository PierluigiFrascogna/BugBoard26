{
    "latex-workshop.latex.outDir": "build",
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex-shellescape",
            "command": "latexmk",
            "args": [
                "-pdfxe",
                "-shell-escape",
                "-interaction=nonstopmode",
                "-synctex=1",
                "-outdir=build",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex + shell-escape",
            "tools": [
                "xelatex-shellescape"
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "*.aux",
        "*.bbl",
        "*.blg",
        "*.brf",
        "*.fdb_latexmk",
        "*.fls",
        "*.log",
        "*.nav",
        "*.out",
        "*.snm",
        "*.toc",
        "*.synctex.gz",
        "*.bcf",
        "*.vrb",
        "*.xdv"
    ],
    "latex-workshop.latex.recipe.default": "xelatex + shell-escape"
}