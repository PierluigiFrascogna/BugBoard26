{
    "name": "Web",
    "dockerComposeFile": "../../compose.localdev.yaml",
    "service": "web",
    "runServices": ["web"],
    
    "features": {
        "ghcr.io/devcontainers/features/git:1": {}
    },

    "workspaceFolder": "/BugBoard26/frontend/web",

    "forwardPorts": [4200],
 
	"postCreateCommand": "./scripts/postCreate.sh",
	"postStartCommand": "./scripts/postStart.sh",

	"portsAttributes": {
		"4200": {
			"label": "Angular Dev Server",
			"onAutoForward": "openBrowser"
		}
	}
}